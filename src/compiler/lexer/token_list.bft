section_helpers:
ident        -> [a-zA-Z0-9][a-zA-Z_]*
char_inside  -> (.)|(\\[nt])
holder_ident -> [lsd]

section_tokens:
kwd_class    -> 'class'
kwd_module   -> 'module'
kwd_meth     -> 'meth'
kwd_if       -> 'if'
kwd_elseif   -> 'elseif'
kwd_else     -> 'else'
kwd_is       -> 'is'
kwd_isnow    -> 'is_now'
kwd_not      -> 'not'
kwd_forms    -> 'forms'
kwd_are      -> 'are'
kwd_or       -> 'or'
kwd_and      -> 'and'
kwd_for      -> 'for'
kwd_enum     -> 'enum'
kwd_require  -> 'require'
kwd_import   -> 'import'
kwd_until    -> 'until'
kwd_unless   -> 'unless'

identifier  -> {ident}
[save_text]

param_ident -> {ident}':'
[save_text]

integer      -> [0-9]+
[save_text]

float        -> [0-9]*'.'[0-9]+
[save_text]

char         -> '\''{char_inside}'\''

string       -> '"'.*'"'

white_space  -> [\t ]
[ignore]

op_plus      -> '+'
op_minus     -> '-'
op_times     -> '*'
op_divide    -> '/'
op_modulus   -> '%'
op_assign    -> ':='
op_pow       -> '^'
op_concat    -> '++'

line_ending  -> \n

op_eq        -> '='
op_lt        -> '<'
op_leq       -> '<='
op_gt        -> '>'
op_geq       -> '>='

pipe         -> '|'


holder_begin -> {holder_ident}'{'
holder_end   -> '}'

block_begin  -> '['
block_end    -> ']'

paren_begin  -> '('
paren_end    -> ')'
