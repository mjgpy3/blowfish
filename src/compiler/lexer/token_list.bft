section_helpers:
ident        -> [a-zA-Z0-9][a-zA-Z_]*
char_inside  -> .|\.
holder_ident -> [lsd]

section_tokens:
identifier  -> {ident}
[save_text]

param_ident -> {ident}':'
[save_text]

integer      -> [0-9]+
[save_text]

float        -> [0-9]*\.[0-9]+
[save_text]

char         -> '\''{char_inside}'\''

string       -> '"'.'"'

white_space  -> [\t ]+
[ignore]

op_plus      -> '+'
op_minus     -> '-'
op_times     -> '*'
op_divide    -> '/'
op_modulus   -> '%'
op_assign    -> ':='
op_pow       -> '^'
op_concat    -> '++'

line_ending  -> \n

op_eq        -> '='
op_lt        -> '<'
op_leq       -> '<='
op_gt        -> '>'
op_geq       -> '>='

pipe         -> '|'

kwd_module   -> 'module'
[keyword]
kwd_class    -> 'class'
[keyword]
kwd_meth     -> 'meth'
[keyword]
kwd_if       -> 'if'
[keyword]
kwd_elseif   -> 'elseif'
[keyword]
kwd_else     -> 'else'
[keyword]
kwd_is       -> 'is'
[keyword]
kwd_isnow    -> 'is_now'
[keyword]
kwd_not      -> 'not'
[keyword]
kwd_forms    -> 'forms'
[keyword]
kwd_are      -> 'are'
[keyword]
kwd_or       -> 'or'
[keyword]
kwd_and      -> 'and'
[keyword]
kwd_for      -> 'for'
[keyword]
kwd_enum     -> 'enum'
[keyword]
kwd_require  -> 'require'
[keyword]
kwd_import   -> 'import'
[keyword]
kwd_until    -> 'until'
[keyword]
kwd_unless   -> 'unless'
[keyword]

holder_begin -> {holder_ident}'{'
holder_end   -> '}'

block_begin  -> '['
block_end    -> ']'

paren_begin  -> '('
paren_end    -> ')'
